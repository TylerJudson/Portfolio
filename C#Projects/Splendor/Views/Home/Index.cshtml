@{
    ViewData["Title"] = "Splendor";
}

<div class="home-container">
    <!-- Decorative Background Elements -->
    <div class="home-bg-decoration">
        <div class="home-bg-orb home-bg-orb--1"></div>
        <div class="home-bg-orb home-bg-orb--2"></div>
        <div class="home-bg-orb home-bg-orb--3"></div>
    </div>

    <div class="home-content animate-fade-in-up">
        <!-- Logo/Title -->
        <div class="home-logo">
            <h1 class="home-title heading-display">Splendor</h1>
            <p class="home-subtitle">A game of gem trading and prestige</p>
        </div>

        <!-- Action Buttons -->
        <div class="home-actions">
            <a class="btn btn-purple btn-xl home-btn animate-fade-in-up stagger-1"
               asp-controller="WaitingRoom" asp-action="NewGame">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"/>
                    <line x1="12" y1="8" x2="12" y2="16"/>
                    <line x1="8" y1="12" x2="16" y2="12"/>
                </svg>
                New Game
            </a>

            <a class="btn btn-outline-purple btn-xl home-btn animate-fade-in-up stagger-2"
               asp-controller="WaitingRoom" asp-action="ListGames">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                    <circle cx="9" cy="7" r="4"/>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                </svg>
                Join Game
            </a>
        </div>
    </div>
</div>
