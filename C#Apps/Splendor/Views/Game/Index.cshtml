                                {
                                    height += 5;
                                    <tr>
                                        <td class="pe-3"><h1>and returned</h1></td>
                                        @foreach (KeyValuePair<Token, int> kvp in turn.TakenTokens)
                                        {
                                            for (int j = 0; j > kvp.Value; j--)
                                            {
                                                <td class="px-1"><img style="width: 3rem;" src="/Images/@(kvp.Key).png" alt="@kvp.Key" /></td>
